{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "alwaysStrict": true,
    "lib": [
      "ES2022"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "esModuleInterop": true,
    "target": "ES6"
  },
  "include": [
    "src",
    "tests",
    "index.ts"
  ],
  "exclude": [
    "node_modules/**",
    "**/*.d.ts"
  ]
}
